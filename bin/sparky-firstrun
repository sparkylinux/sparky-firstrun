# Last update 2020/09/02

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-firstrun"
if [ "`cat /etc/default/locale | grep LANG=de`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep LANG=el`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep LANG=es`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep LANG=fr`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep LANG=hu`" != "" ]; then
. $DEFLOCDIR/hu
elif [ "`cat /etc/default/locale | grep LANG=id_ID`" != "" ]; then
. $DEFLOCDIR/id_ID
elif [ "`cat /etc/default/locale | grep LANG=it`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep LANG=ja`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep LANG=pl`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep LANG=pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep LANG=pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep LANG=ru`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

DIALOG="yad --width 400"
DIALOG450="yad --width 450"
TITLE="--always-print-result --dialog-sep --window-icon=/usr/share/icons/sparky/firstrun/sparky48.png --image=/usr/share/icons/sparky/firstrun/sparky48.png --title="
TITLETEXT="$LOCAL1"
ENTRY="--entry"
TEXT="--text="
ENTRYTEXT="--entry-text"
OKEXIT=" --button=Ok:0 --button=$LOCAL2:1 "
MSGBOX=" --button=Ok:0"
TESTUSER=`grep "live" /etc/passwd`

# don't run it in Live mode
if [ "$TESTUSER" != "" ]; then
	exit 1
fi

sleep 6

$DIALOG450 $TITLE"$TITLETEXT" $OKEXIT $TEXT"$LOCAL4\n\
1. $LOCAL5\n\
2. $LOCAL8\n\n\
$LOCAL11"

if [ "$?" != "1" ]; then

	# perform the jobs now
	remsu /usr/bin/sparky-firstrun-exe run
else
	$DIALOG $TITLE"$TITLETEXT" $OKEXIT $TEXT"$LOCAL12"
	if [ "$?" != "1" ]; then
		remsu /usr/bin/sparky-firstrun-exe del 
		exit 0

	elif [ "$?" = "1" ]; then
		exit 1
	fi
	
fi

exit 0
